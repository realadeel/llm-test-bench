# LLM Test Bench Configuration Example
# Copy this to config.yaml and customize for your tests
# API keys are loaded from .env file

# Provider configurations - choose which providers to test
providers:
  - name: "bedrock_claude"
    model: "anthropic.claude-3-haiku-20240307-v1:0"
  - name: "openai"
    model: "gpt-4o-mini"
  - name: "gemini"
    model: "gemini-1.5-flash"

# Test execution settings
delay_between_calls: 1      # seconds between API calls (rate limiting)
delay_between_test_cases: 2 # seconds between test cases

# Test cases - define your specific tests here
test_cases:
  - name: "Multi-Tool Image Analysis"
    prompt: "You are an expert analyst. Examine this image carefully and determine what type of item it is, then provide structured analysis using the most appropriate method. Choose the analysis type that best matches what you see in the image."
    image_path: "test_images/Radioheadokcomputer.png"
    max_tokens: 2000
    temperature: 0.7
    # Multi-tool configuration - AI chooses the best analysis method
    tools:
      - name: "analyze_music_album"
        description: "Use for music albums, vinyl records, CDs, and music-related items"
        schema:
          type: "object"
          properties:
            item_type:
              type: "string"
              description: "Type of music item (vinyl, cd, digital, etc.)"
            title:
              type: "string"
              description: "Album or song title"
            artist:
              type: "string"
              description: "Primary artist or band name"
            year:
              type: "string"
              description: "Release year or era"
            genre:
              type: "string"
              description: "Musical genre"
            label:
              type: "string"
              description: "Record label or publisher"
            condition:
              type: "string"
              enum: ["Mint", "Near Mint", "Very Good", "Good", "Fair", "Poor", "Cannot assess"]
              description: "Physical condition assessment"
            confidence:
              type: "number"
              minimum: 0.0
              maximum: 1.0
              description: "Analysis confidence score"
          required: ["item_type", "title", "artist", "confidence"]
          
      - name: "analyze_book"
        description: "Use for books, magazines, publications, and printed materials"
        schema:
          type: "object"
          properties:
            item_type:
              type: "string"
              description: "Type of publication (book, magazine, manual, etc.)"
            title:
              type: "string"
              description: "Title of the publication"
            author:
              type: "string"
              description: "Author or primary creator"
            publisher:
              type: "string"
              description: "Publishing company"
            year:
              type: "string"
              description: "Publication year"
            genre:
              type: "string"
              description: "Genre or category"
            isbn:
              type: "string"
              description: "ISBN if visible"
            condition:
              type: "string"
              enum: ["Fine", "Very Fine", "Near Fine", "Very Good", "Good", "Fair", "Poor", "Cannot assess"]
              description: "Physical condition"
            confidence:
              type: "number"
              minimum: 0.0
              maximum: 1.0
              description: "Analysis confidence score"
          required: ["item_type", "title", "author", "confidence"]
          
      - name: "analyze_artwork"
        description: "Use for paintings, prints, posters, and visual art"
        schema:
          type: "object"
          properties:
            item_type:
              type: "string"
              description: "Type of artwork (painting, print, poster, etc.)"
            title:
              type: "string"
              description: "Title or subject of the artwork"
            artist:
              type: "string"
              description: "Artist or creator name"
            style:
              type: "string"
              description: "Artistic style or movement"
            medium:
              type: "string"
              description: "Materials used (oil, watercolor, digital, etc.)"
            year:
              type: "string"
              description: "Creation year or era"
            condition:
              type: "string"
              description: "Physical condition assessment"
            confidence:
              type: "number"
              minimum: 0.0
              maximum: 1.0
              description: "Analysis confidence score"
          required: ["item_type", "title", "artist", "confidence"]
          
      - name: "analyze_general_object"
        description: "Use for any other objects, collectibles, or items not covered by other categories"
        schema:
          type: "object"
          properties:
            item_type:
              type: "string"
              description: "General category of the object"
            name:
              type: "string"
              description: "Name or description of the object"
            brand:
              type: "string"
              description: "Brand or manufacturer if applicable"
            category:
              type: "string"
              description: "Specific category (toy, electronic, furniture, etc.)"
            material:
              type: "string"
              description: "Primary materials"
            year:
              type: "string"
              description: "Manufacturing year or era"
            condition:
              type: "string"
              description: "Physical condition"
            confidence:
              type: "number"
              minimum: 0.0
              maximum: 1.0
              description: "Analysis confidence score"
          required: ["item_type", "name", "category", "confidence"]
    
  - name: "Simple Object Detection"
    prompt: "Identify and list all distinct objects you can see in this image with confidence scores."
    image_path: "test_images/Radioheadokcomputer.png"
    max_tokens: 1500
    temperature: 0.3
    # Single schema configuration - traditional structured output
    schema:
      type: "object"
      properties:
        scene_description:
          type: "string"
          description: "Brief description of the overall scene"
        objects:
          type: "array"
          items:
            type: "object"
            properties:
              name:
                type: "string"
                description: "Name of the detected object"
              confidence:
                type: "number"
                minimum: 0.0
                maximum: 1.0
                description: "Confidence in detection (0-1)"
              location:
                type: "string"
                description: "General location in image (e.g., 'center', 'top-left')"
            required: ["name", "confidence"]
        total_objects:
          type: "integer"
          description: "Total number of distinct objects detected"
        analysis_method:
          type: "string"
          description: "Brief description of detection approach used"
      required: ["scene_description", "objects", "total_objects"]
      
  - name: "Text Extraction"
    prompt: "Extract all visible text from this image, including any partial text, labels, or writing."
    image_path: "test_images/Radioheadokcomputer.png"
    max_tokens: 1500
    temperature: 0.1
    schema:
      type: "object"
      properties:
        extracted_text:
          type: "array"
          items:
            type: "object"
            properties:
              text:
                type: "string"
                description: "The actual text found"
              location:
                type: "string"
                description: "Where in the image (e.g., 'top center', 'bottom left')"
              font_style:
                type: "string"
                description: "Description of text appearance"
              confidence:
                type: "number"
                minimum: 0.0
                maximum: 1.0
                description: "Confidence in text extraction"
            required: ["text", "location", "confidence"]
        has_readable_text:
          type: "boolean"
          description: "Whether any clearly readable text was found"
        primary_language:
          type: "string"
          description: "Detected primary language of text"
        total_text_elements:
          type: "integer"
          description: "Number of separate text elements found"
      required: ["extracted_text", "has_readable_text", "total_text_elements"]
